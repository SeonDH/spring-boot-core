<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="messageSenderBean" class="org.example.sender.DoorayWebHookSender" primary="true"/>

    <!--    <bean id="messageSenderBean" class="org.example.sender.EmailSender"/>-->

    <bean id="appStartupRunner" class="org.example.runner.ContextRunner">
        <constructor-arg name="messageSender" ref="messageSenderBean"/>
    </bean>

</beans>